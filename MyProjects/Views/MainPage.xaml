<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProjects.Views.MainPage"
             xmlns:vm="clr-namespace:MyProjects.ViewModels">
    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>
    
    <StackLayout VerticalOptions="Center" Padding="30" Spacing="20">
        <Label Text="Добро пожаловать!" HorizontalTextAlignment="Center" FontSize="30"/>
        <Button Text="Начать путешествие" FontSize="20" FontAttributes="Bold"
                Command="{Binding NavigateToDirectionsCommand}"/>
    </StackLayout>
</ContentPage>
